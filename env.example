# 环境配置
NODE_ENV=development
PORT=5000

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/douyin-treasure

# Redis配置 (可选)
REDIS_URL=redis://localhost:6379

# JWT密钥
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# 客户端地址
CLIENT_URL=http://localhost:3000

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=100MB

# 高德地图API (获取地址: https://lbs.amap.com/)
AMAP_API_KEY=your_amap_api_key_here
AMAP_SECRET=your_amap_secret_here

# 阿里云OSS配置 (生产环境)
ALI_OSS_REGION=oss-cn-beijing
ALI_OSS_BUCKET=douyin-treasure
ALI_OSS_ACCESS_KEY_ID=your_access_key_id
ALI_OSS_ACCESS_KEY_SECRET=your_access_key_secret

# 邮件服务配置
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password

# 推送服务配置
JPUSH_APP_KEY=your_jpush_app_key
JPUSH_MASTER_SECRET=your_jpush_master_secret

# 短信服务配置
SMS_ACCOUNT_SID=your_sms_account_sid
SMS_AUTH_TOKEN=your_sms_auth_token

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 安全配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
BCRYPT_ROUNDS=12

# 视频处理配置
FFMPEG_PATH=/usr/local/bin/ffmpeg
VIDEO_QUALITY=720p
VIDEO_MAX_DURATION=300

# 缓存配置
CACHE_TTL=3600
SESSION_SECRET=your_session_secret_here
