{
  "name": "douyin-treasure",
  "version": "1.0.0",
  "description": "短视频LBS寻宝社交平台",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "test": "jest",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "install:all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "mongoose": "^8.0.0",
    "redis": "^4.6.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^7.0.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "joi": "^17.10.0",
    "nodemailer": "^6.9.5",
    "sharp": "^0.32.5",
    "ffmpeg-static": "^5.2.0",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.50.0",
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "短视频",
    "LBS",
    "寻宝",
    "社交",
    "地理位置",
    "移动应用",
    "AI推荐"
